{
  "extends": "plasmo/templates/tsconfig.base",
  "exclude": ["node_modules"],
  "include": [".plasmo/index.d.ts", "./**/*.ts", "./**/*.tsx"],
  "compilerOptions": {
    "paths": {
      "~*": ["./*"],
      "@/*": ["./*"]
    },
    "baseUrl": ".",
    "jsx": "react-jsx", // 如果使用 React 17+ 或 React 18
    "jsxImportSource": "react", // React 17+ 或 React 18 的新语法，适配 ESBuild 或 Vite
    "lib": ["dom", "esnext"],
    "module": "esnext",
    "target": "esnext",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true
  }
}
